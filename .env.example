# Database
DB_PATH=./data/totp.db

# Database encryption key (64 hex chars = 32 bytes for ChaCha20-Poly1305)
DB_ENCRYPTION_KEY=

# Secret encryption key (64 hex chars = 32 bytes for AES-256-GCM)
SECRET_ENCRYPTION_KEY=

# Session secret (64 hex chars = 32 bytes for HMAC-SHA256)
SESSION_SECRET=

# Admin credentials (used by seed script)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# TLS certificates (generated by mkcert)
TLS_CERT_PATH=./certs/cert.pem
TLS_KEY_PATH=./certs/key.pem
